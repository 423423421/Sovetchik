import telebot
from telebot import types
import random

bot = telebot.TeleBot('6000959029:AAGrYNbgK5MdZlu3IDGwyGtsnofmSBcJYVg')

@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton=('Фильм')
    btn2 = types.KeyboardButton=('Сериал')
    markup.add(btn1, btn2)
    bot.send_message(message.chat.id, 'Привет!' + '\n' + '\nЯ бот, который советует фильм/сериал, для этого нажми на кнопку', reply_markup = markup)

