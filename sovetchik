    ]
    bot.send_message(message.chat.id, random.choice(serial))
@bot.message_handler(content_types=['text'])
def message(message):
    if message.text == 'Фильм':
        film(message)
    elif message.text == 'Сериал':
        serial(message)
    else:
        bot.send_message(message.chat.id, 'Я понимаю только кнопки, пользуйся ими')

bot.polling(none_stop=True)
